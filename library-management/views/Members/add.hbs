<h2>Add New Member</h2>

<form action="/members/add" method="POST">
  <div class="mb-3">
    <label for="name" class="form-label">Name *</label>
    <input type="text" name="name" id="name" class="form-control" required />
  </div>

  <div class="mb-3">
    <label for="email" class="form-label">Email *</label>
    <input type="email" name="email" id="email" class="form-control" required />
  </div>

  <div class="mb-3">
    <label for="phone" class="form-label">Phone</label>
    <input type="text" name="phone" id="phone" class="form-control" />
  </div>

  <div class="mb-3">
    <label for="membershipExpiry" class="form-label">Membership Expiry *</label>
    <input type="date" name="membershipExpiry" id="membershipExpiry" class="form-control" required />
  </div>

  <button type="submit" class="btn btn-primary">Add Member</button>
  <a href="/members" class="btn btn-secondary">Cancel</a>
</form>
