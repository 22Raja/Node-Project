<h1>Books</h1>
<a href="/books/add" class="btn btn-primary mb-3">Add New Book</a>
<head>
  <link rel="icon" href="library.png" type="image/x-icon">
</head>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Total Copies</th>
      <th>Available Copies</th>
      <th>Issued Copies</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each books}}
      <tr>
        <td>{{this.title}}</td>
        <td>{{this.author}}</td>
        <td>{{this.totalCopies}}</td>
        <td>{{this.copiesAvailable}}</td>
        <td>{{this.copiesIssued}}</td>
        <td>
          <a href="/books/edit/{{this._id}}" class="btn btn-sm btn-warning">Edit</a>
          <form action="/books/delete/{{this._id}}?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this book?');">Delete</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>


