<h2>Issue New Book</h2>

<form action="/issues/add" method="POST">
  <div class="mb-3">
    <label for="bookId" class="form-label">Book *</label>
    <select name="bookId" id="bookId" class="form-select" required>
      {{#each books}}
        <option value="{{this._id}}">{{this.title}} (Available: {{this.copiesAvailable}})</option>
      {{/each}}
    </select>
  </div>

  <div class="mb-3">
    <label for="memberId" class="form-label">Member *</label>
    <select name="memberId" id="memberId" class="form-select" required>
      {{#each members}}
        <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}
    </select>
  </div>

  <div class="mb-3">
    <label for="dueDate" class="form-label">Due Date *</label>
    <input type="date" name="dueDate" id="dueDate" class="form-control" required />
  </div>

  <button type="submit" class="btn btn-primary">Issue Book</button>
  <a href="/issues" class="btn btn-secondary">Cancel</a>
</form>
